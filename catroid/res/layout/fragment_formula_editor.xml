<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:windowFullscreen="true"
	android:theme="@android:style/Theme.Light"
	android:background="@color/white">
	<LinearLayout
	    android:id="@+id/formula_editor_brick_space"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" />
	
    <at.tugraz.ist.catroid.formulaeditor.FormulaEditorEditText
        android:id="@+id/formula_editor_edit_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/formula_editor_brick_space"
        android:layout_above="@+id/keyboardcat"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:minLines="3"
        android:scrollbars="vertical"
        android:hint="@string/formula_nothing_selected"
        android:textSize="@dimen/text_size_xxlarge" 
		android:background="@color/white"
        />

      
    <at.tugraz.ist.catroid.formulaeditor.CatKeyboardView
        android:id="@+id/keyboardcat"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:keyTextColor="#ffffff"
		android:keyPreviewHeight="0sp"
		/>
        <RelativeLayout
	        android:id="@+id/swipe_bar"
	        android:layout_width = "match_parent"
	        android:layout_height = "12dp"
	        android:layout_above="@id/keyboardcat">
	        <!-- android:background="@drawable/formula_editor_keyboard_tab_bar"-->
	        
	        

             <TextView
               android:id="@+id/formula_editor_caption_left"
               android:text="@string/sensors"
               android:layout_width = "wrap_content"
               android:layout_height = "wrap_content"
               android:layout_weight="0.33"
               android:layout_centerHorizontal="true"
               android:textSize="@dimen/text_size_xxsmall"
               android:textColor="@color/solid_white"
               android:textStyle="bold"
              />
             
             <TextView
                android:id="@+id/formula_editor_caption_center"
                android:text="@string/numbers"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_weight="0.33"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_xxsmall"
                android:textColor="@color/solid_white"
                android:textStyle="bold"
                />
             
             <TextView
               android:id="@+id/formula_editor_caption_right"
               android:text="@string/functions"
               android:layout_width = "wrap_content"
               android:layout_height = "wrap_content"
               android:layout_weight="0.33"
               android:layout_alignParentRight="true"
               android:textSize="@dimen/text_size_xxsmall"
               android:textColor="@color/solid_white"
               android:textStyle="bold"
               />
        </RelativeLayout>
     
    
</RelativeLayout>

