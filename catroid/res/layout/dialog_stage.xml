<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#00000000"
>

	<!-- Menu buttons -->
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
	>
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight=".25"
		>
			<Button
				android:id="@+id/back_to_construction_site_button"
				android:text="@string/back_to_construction_site"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight=".5"
				android:background="@null"
				android:drawableTop="@drawable/ic_launcher_catroid_clear"
				android:paddingTop="20dip"
			></Button>
			<Button
				android:id="@+id/resume_current_project_button"
				android:text="@string/resume_current_project"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight=".5"
				android:background="@null"
				android:drawableTop="@drawable/ic_launcher_catroid_clear"
				android:paddingTop="20dip"
			></Button>
		</LinearLayout>
		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight=".25"
		>
			<Button
				android:id="@+id/restart_current_project_button"
				android:text="@string/restart_current_project"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight=".5"
				android:background="@null"
				android:drawableTop="@drawable/ic_launcher_catroid_clear"
				android:paddingTop="20dip"
			></Button>
			<Button
				android:id="@+id/snapshot_button"
				android:text="@string/snapshot"
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:layout_weight=".5"
				android:background="@null"
				android:drawableTop="@drawable/ic_launcher_catroid_clear"
				android:paddingTop="20dip"
			></Button>
		</LinearLayout>
		
		
	</LinearLayout>
</LinearLayout>