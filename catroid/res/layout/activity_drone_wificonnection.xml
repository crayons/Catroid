<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drone_backrepeat"
    android:orientation="vertical" android:gravity="center_horizontal">

    
 <ScrollView android:id="@+id/scroll" android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:paddingTop="15dp"
			android:paddingBottom="5dp">
			<TextView android:id="@+id/tvWifiConnectionTitle"
				android:text="@string/drone_wifi_connection_title"
				android:layout_width="match_parent" android:layout_height="match_parent"
				android:textSize="30dp" android:textColor="#ff0000"
				android:layout_marginLeft="8dp" android:gravity="center_horizontal">
			</TextView>
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:paddingTop="5dp"
			android:paddingBottom="5dp">
			<TextView android:id="@+id/tvWifiConnectionDescription"
				android:text="@string/drone_wifi_connection_description"
				android:layout_width="wrap_content" android:layout_height="match_parent"
				android:textSize="15dp" android:textColor="#ffffff"
				android:layout_marginLeft="8dp" android:gravity="center_horizontal">
			</TextView>
		</LinearLayout>

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content" android:paddingTop="30dp"
			android:paddingBottom="5dp">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ProgressBar android:id="@+id/pb_connection_status"
					style="@android:style/Widget.ProgressBar.Small"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:visibility="gone">
				</ProgressBar>
				<TextView android:id="@+id/tvWifiConnectionTitleProgress"
					android:text="@string/drone_wifi_connection_title"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:textSize="18dp" android:textColor="#ffffff"
					android:layout_marginLeft="10dp" android:gravity="center">
				</TextView>
				
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:paddingTop="8dp"
				android:gravity="center">
				<ImageView android:id="@+id/iv_status_wifi"
					android:contentDescription="@drawable/yes_icon"
					android:layout_height="match_parent" android:layout_width="wrap_content"
					android:gravity="center" android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_wifi" android:text="@string/drone_wifi_status_wifi"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ImageView android:id="@+id/iv_status_wifi_scan_for_drone"
					android:contentDescription="@drawable/yes_icon" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:gravity="center"
					android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_wifi_scan_for_drone"
					android:text="@string/drone_wifi_status_wifi_scan_for_drone"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ImageView android:id="@+id/iv_status_connect_drone"
					android:contentDescription="@drawable/yes_icon" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:gravity="center"
					android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_connect_drone"
					android:text="@string/drone_wifi_status_connect_drone"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ImageView android:id="@+id/iv_status_check_firmware"
					android:contentDescription="@drawable/yes_icon" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:gravity="center"
					android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_check_firmware"
					android:text="@string/drone_wifi_status_check_firmware"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ImageView android:id="@+id/iv_status_get_navdata"
					android:contentDescription="@drawable/yes_icon" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:gravity="center"
					android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_get_navdata"
					android:text="@string/drone_wifi_status_get_navdata"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:gravity="center">
				<ImageView android:id="@+id/iv_status_check_config"
					android:contentDescription="@drawable/yes_icon" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:gravity="center"
					android:visibility="gone">
				</ImageView>
				<TextView android:id="@+id/tv_status_check_config"
					android:text="@string/drone_wifi_status_check_config"
					android:layout_width="wrap_content" android:layout_height="match_parent"
					android:gravity="center" android:textSize="12dp" android:textColor="#ffffff"
					android:layout_marginLeft="8dp">
				</TextView>
			</LinearLayout>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="match_parent"
				android:layout_height="match_parent" android:paddingTop="30dp"
				android:gravity="center">
				<Button android:id="@+id/buttonStart" android:text="@string/drone_bt_wifi_start"
					android:gravity="center" android:layout_width="wrap_content"
					android:layout_height="match_parent" android:paddingLeft="100dp"
					android:paddingRight="100dp">
				</Button>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="match_parent"
		    android:layout_height="26dp"
		    android:orientation="vertical"
		    android:paddingTop="30dp" >

			<!-- <ScrollView android:layout_width="match_parent"
				android:layout_height="150dp">                       
				 -->
				<TextView android:id="@+id/tv_wifi_connection_error"
					android:text="" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="15dp"
					android:textColor="#ff0000" android:layout_marginLeft="8dp"
					android:gravity="center_horizontal">
				</TextView>
				<!--
			</ScrollView>
			-->
		</LinearLayout>
	</LinearLayout>
	</ScrollView>
</LinearLayout>