<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:background="@drawable/brick_drone"
>
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
	<TextView
		android:id="@+id/ValueTextView"
		android:text="@string/drone_brick_move"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:textColor="@color/white"
		android:textSize="18dip"
		android:textStyle="bold"
	>
	</TextView>
	<Button
		android:id="@+id/btMoveChoose"
		android:layout_height="wrap_content"
		android:layout_width="280px"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:maxWidth="150dip"
		android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false">
  </Button>
 </RelativeLayout>

 <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
   <LinearLayout
     android:id="@+id/linearLayout1"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_centerVertical="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true">
     
     <TextView
       android:id="@+id/ValueTextView"
       android:text="@string/drone_to"
       android:layout_height="wrap_content"
       android:layout_width="130px"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:textColor="@color/white"
       android:textSize="18dip"
       android:textStyle="bold"
      >
      </TextView>
     
     <ImageView
	    android:id="@+id/ivMoveDirection"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/drone_move_forward"
	    android:visibility="gone">
      </ImageView>
      <ImageView
        android:id="@+id/ivMoveAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drone_move_downward"
        android:visibility="gone">
      </ImageView>
      <ImageView
        android:id="@+id/ivMoveRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drone_move_rotation_left"
        android:visibility="gone">
      </ImageView>
     
   </LinearLayout>
  </RelativeLayout>

  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
    <LinearLayout
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_alignParentRight="false"
     android:layout_centerVertical="true"
    >
     <TextView
       android:id="@+id/drone_TvSpeed"
       android:text=""
       android:layout_height="wrap_content"
       android:layout_width="180px"
       android:paddingRight="10dip"
       android:textColor="@color/white"
       android:textSize="18dip"
       android:textStyle="bold"
     >
     </TextView>
     <SeekBar
      android:max="10"
      android:id="@+id/seekBarSpeed"
      android:layout_height="wrap_content"
      android:layout_width="200px"
      android:clickable="false"
      android:focusable="false"
      android:focusableInTouchMode="false">
    </SeekBar>
   </LinearLayout>
 </RelativeLayout>
</LinearLayout>