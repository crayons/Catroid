<LinearLayout
  android:id="@+id/drone_move_dialog"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  >
    <ImageView
      android:id="@+id/imageView"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true" 
      android:layout_width="wrap_content"
      android:src="@drawable/ic_drone" 
      android:layout_height="wrap_content" />
    <TextView
      android:text="@string/drone_move_to"
      android:layout_toRightOf="@id/imageView"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="20dip" />
  </RelativeLayout>
  
  <View
    android:layout_height="2dip"
    android:layout_width="fill_parent"
    android:background="@color/white">
  </View>
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  >
	  <RadioGroup 
	    android:id="@+id/rg_fw_bw"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal">
	    <RadioButton
	      android:id="@+id/rbForward"
	      android:text="@string/drone_move_forward"
	      android:drawableLeft="@drawable/drone_move_forward"
	      android:layout_height="match_parent"
	      android:layout_width="220px">
	    </RadioButton>"
	    <RadioButton
	      android:id="@+id/rbBackward"
	      android:text="@string/drone_move_backward"
	      android:drawableLeft="@drawable/drone_move_backward"
	      android:layout_height="match_parent"
	      android:layout_width="240px">
	    </RadioButton>
	  </RadioGroup>
  </RelativeLayout>
  
  <View
    android:layout_height="2dip"
    android:layout_width="fill_parent"
    android:background="@color/white">
  </View>
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  >
    <RadioGroup 
      android:id="@+id/rg_l_r"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal">
      <RadioButton
        android:id="@+id/rbLeft"
        android:text="@string/drone_move_left"
        android:drawableLeft="@drawable/drone_move_left"
        android:layout_height="match_parent"
        android:layout_width="220px">
      </RadioButton>
      <RadioButton
        android:id="@+id/rbRight"
        android:text="@string/drone_move_right"
        android:drawableLeft="@drawable/drone_move_right"
        android:layout_height="match_parent"
        android:layout_width="240px">
      </RadioButton>
    </RadioGroup>
  </RelativeLayout>
  
  <View
    android:layout_height="2dip"
    android:layout_width="fill_parent"
    android:background="@color/white">
  </View>
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  >
    <RadioGroup
      android:id="@+id/rg_uw_dw"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal">
      <RadioButton
        android:id="@+id/rbDownward"
        android:text="@string/drone_move_downward"
        android:drawableLeft="@drawable/drone_move_downward"
        android:layout_height="match_parent"
        android:layout_width="220px">
      </RadioButton>
      <RadioButton
        android:id="@+id/rbUpward"
        android:text="@string/drone_move_upward"
        android:drawableLeft="@drawable/drone_move_upward"
        android:layout_height="match_parent"
        android:layout_width="240px">
      </RadioButton>
    </RadioGroup>
  </RelativeLayout>

  <View
    android:layout_height="2dip"
    android:layout_width="fill_parent"
    android:background="@color/white">
  </View>

  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
  >
    <RadioGroup 
      android:id="@+id/rg_rl_rr"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal">
      <RadioButton
        android:id="@+id/rbRotationLeft"
        android:text="@string/drone_move_rotation_left"
        android:drawableLeft="@drawable/drone_move_rotation_left"
        android:layout_height="match_parent"
        android:layout_width="220px">
      </RadioButton>
      <RadioButton
        android:id="@+id/rbRotationRight"
        android:text="@string/drone_move_rotation_right"
        android:drawableLeft="@drawable/drone_move_rotation_right"
        android:layout_height="match_parent"
        android:layout_width="240px">
      </RadioButton>
    </RadioGroup>
  </RelativeLayout>

  <View
    android:layout_height="2dip"
    android:layout_width="fill_parent"
    android:background="@color/white">
  </View>

  <Button
    android:id="@+id/btOk"
    android:layout_width="200px"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="10px"
    android:text="OK">
  </Button>
  
</LinearLayout>