<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="10dp"
>
	<TextView
		android:id="@+id/tvDroneInstallText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/drone_terms_of_use"
		android:gravity="center" />
		
	<CheckBox 
	  android:id="@+id/cbAlwaysAccept"
	  android:text="@string/drone_tof_not_show_again"
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_gravity="center_horizontal"
	  android:layout_marginTop="15px" >
    </CheckBox>
		
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="15px" >
    <Button
      android:id="@+id/accept_button"
      android:text="@string/drone_accept_termsofuse_button"
      android:layout_width="150px"
      android:layout_height="wrap_content" />
    <Button
      android:id="@+id/abort_button"
      android:text="@string/drone_abort_termsofuse_button"
      android:layout_width="150px"
      android:layout_height="wrap_content" />
  </LinearLayout>
</LinearLayout>