<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brick_plate_at_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/brick_blue" >



        
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/y_text_container"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_alignParentRight="true">
	      
        <TextView
            android:id="@+id/brick_place_at_y_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@color/white"
            android:gravity="right"
            android:minHeight="30dip"
            android:minWidth="50dip"
            android:paddingRight="5dip"
            android:text="0"
            android:textSize="20dip" >
        </TextView>

        <EditText
            android:id="@+id/brick_place_at_y_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLength="5"
            android:maxLines="1"
			android:maxWidth="60dip"
            android:text="0"
            android:visibility="gone" >
        </EditText>
        </RelativeLayout>
        

	    
        <TextView
            android:id="@+id/y_label"
            style="@style/brick_text_style"
            android:text="@string/y_label" 
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/y_text_container"
            >
        </TextView>
        
	  	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/x_text_container"
	     android:layout_toLeftOf="@id/y_label"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/brick_place_at_x_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@color/white"
            android:gravity="right"
            android:minHeight="30dip"
            android:minWidth="50dip"
            android:paddingRight="5dip"
            android:text="0"
            android:textSize="20dip" >
        </TextView>

        <EditText
            android:id="@+id/brick_place_at_x_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLength="5"
            android:maxLines="1"
            android:maxWidth="60dip"
            android:text="0"
            android:visibility="gone" >
        </EditText>
        </RelativeLayout>
        
        <TextView
            android:id="@+id/x_label"
            style="@style/brick_text_style"
            android:text="@string/x_label" 
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/x_text_container">
        </TextView>
        
       <TextView
        android:id="@+id/place_at_text_view"
        style="@style/brick_text_style"
        android:layout_centerVertical="true"
        android:singleLine="false"
        android:maxLines="2"
	android:maxWidth="70dp"
        android:text="@string/brick_place_at" >
	    </TextView>


</RelativeLayout>